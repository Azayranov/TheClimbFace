@{
    ViewData["Title"] = "404 - Page Not Found";
}

<div class="error-container">
    <div class="error-content">
        <div class="error-number">
            <span class="digit">4</span>
            <div class="climber-icon">🧗</div>
            <span class="digit">4</span>
        </div>
        
        <h1 class="error-title">Oops! Looks like you climbed the wrong route</h1>
        
        <p class="error-message">
            The page you're looking for doesn't exist or has been moved. 
            Maybe you tried to climb too high? 😅
        </p>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home"></i>
                Home Page
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </a>
        </div>
        
        <div class="fun-facts">
            <h3>Did you know...</h3>
            <ul>
                <li>🎯 There are 404 different techniques in rock climbing?</li>
                <li>🏔️ The highest route in the world is 8848m?</li>
                <li>⏱️ Average time to climb a route is 4-6 hours?</li>
            </ul>
        </div>
    </div>
    
    <div class="floating-elements">
        <div class="floating-boulder">🪨</div>
        <div class="floating-rope">🧶</div>
        <div class="floating-helmet">⛑️</div>
        <div class="floating-carabiner">🔗</div>
    </div>
</div>

<style>
    .error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }
    
    .error-content {
        text-align: center;
        color: white;
        max-width: 600px;
        padding: 2rem;
        z-index: 10;
        position: relative;
    }
    
    .error-number {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        font-size: 8rem;
        font-weight: bold;
        text-shadow: 0 0 20px rgba(255,255,255,0.3);
    }
    
    .digit {
        animation: bounce 2s infinite;
    }
    
    .digit:nth-child(1) {
        animation-delay: 0s;
    }
    
    .digit:nth-child(3) {
        animation-delay: 0.5s;
    }
    
    .climber-icon {
        font-size: 6rem;
        margin: 0 1rem;
        animation: climb 3s infinite;
    }
    
    .error-title {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        font-weight: 300;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .error-message {
        font-size: 1.2rem;
        margin-bottom: 3rem;
        opacity: 0.9;
        line-height: 1.6;
    }
    
    .error-actions {
        margin-bottom: 3rem;
    }
    
    .btn {
        margin: 0.5rem;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #ff6b6b, #ee5a24);
        border: none;
    }
    
    .btn-outline-secondary {
        background: transparent;
        border: 2px solid white;
        color: white;
    }
    
    .btn-outline-secondary:hover {
        background: white;
        color: #667eea;
    }
    
    .fun-facts {
        background: rgba(255,255,255,0.1);
        border-radius: 20px;
        padding: 2rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
    }
    
    .fun-facts h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    
    .fun-facts ul {
        list-style: none;
        padding: 0;
        text-align: left;
    }
    
    .fun-facts li {
        margin-bottom: 0.8rem;
        font-size: 1rem;
        opacity: 0.9;
    }
    
    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }
    
    .floating-boulder,
    .floating-rope,
    .floating-helmet,
    .floating-carabiner {
        position: absolute;
        font-size: 3rem;
        animation: float 6s ease-in-out infinite;
    }
    
    .floating-boulder {
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }
    
    .floating-rope {
        top: 30%;
        right: 15%;
        animation-delay: 1.5s;
    }
    
    .floating-helmet {
        bottom: 30%;
        left: 20%;
        animation-delay: 3s;
    }
    
    .floating-carabiner {
        bottom: 20%;
        right: 10%;
        animation-delay: 4.5s;
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-10px);
        }
    }
    
    @@keyframes climb {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        25% {
            transform: translateY(-10px) rotate(5deg);
        }
        50% {
            transform: translateY(-20px) rotate(0deg);
        }
        75% {
            transform: translateY(-10px) rotate(-5deg);
        }
    }
    
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }
        33% {
            transform: translateY(-20px) rotate(5deg);
        }
        66% {
            transform: translateY(-10px) rotate(-5deg);
        }
    }
    
    @@media (max-width: 768px) {
        .error-number {
            font-size: 5rem;
        }
        
        .climber-icon {
            font-size: 4rem;
        }
        
        .error-title {
            font-size: 1.8rem;
        }
        
        .error-message {
            font-size: 1rem;
        }
        
        .floating-elements {
            display: none;
        }
    }
</style>
