@{
    ViewData["Title"] = "Error - Something went wrong";
}

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <div class="climber-falling">😱</div>
            <div class="rope-broken">🧶</div>
            <div class="gear-scattered">🎒</div>
        </div>
        
        <h1 class="error-title">Oops! Something unexpected happened</h1>
        
        <p class="error-message">
            We encountered an unexpected error while processing your request. 
            Don't worry, even the best climbers fall sometimes! 🤷‍♂️
        </p>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home"></i>
                Home Page
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </a>
            <button onclick="location.reload()" class="btn btn-success btn-lg">
                <i class="fas fa-redo"></i>
                Try Again
            </button>
        </div>
        
        <div class="fun-facts">
            <h3>Climbing Wisdom...</h3>
            <ul>
                <li>🧗‍♂️ Every fall teaches you something new about climbing?</li>
                <li>🎯 The best climbers learn from their mistakes?</li>
                <li>💪 Persistence is key - try, try, try again!</li>
            </ul>
        </div>
        
        <div class="error-details">
            <p class="error-note">
                <i class="fas fa-info-circle"></i>
                If this problem persists, please contact our support team.
            </p>
        </div>
    </div>
    
    <div class="floating-elements">
        <div class="floating-helmet">⛑️</div>
        <div class="floating-carabiner">🔗</div>
        <div class="floating-chalk">🧴</div>
        <div class="floating-shoes">👟</div>
    </div>
</div>

<style>
    .error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        position: relative;
        overflow: hidden;
    }
    
    .error-content {
        text-align: center;
        color: white;
        max-width: 600px;
        padding: 2rem;
        z-index: 10;
        position: relative;
    }
    
    .error-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        font-size: 6rem;
        gap: 1rem;
    }
    
    .climber-falling {
        animation: fall 3s infinite;
    }
    
    .rope-broken {
        animation: swing 2s infinite;
        transform-origin: top center;
    }
    
    .gear-scattered {
        animation: scatter 4s infinite;
    }
    
    .error-title {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        font-weight: 300;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .error-message {
        font-size: 1.2rem;
        margin-bottom: 3rem;
        opacity: 0.9;
        line-height: 1.6;
    }
    
    .error-actions {
        margin-bottom: 3rem;
    }
    
    .btn {
        margin: 0.5rem;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        border: none;
        cursor: pointer;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #667eea, #764ba2);
        color: white;
    }
    
    .btn-outline-secondary {
        background: transparent;
        border: 2px solid white;
        color: white;
    }
    
    .btn-outline-secondary:hover {
        background: white;
        color: #667eea;
    }
    
    .btn-success {
        background: linear-gradient(45deg, #56ab2f, #a8e6cf);
        color: white;
    }
    
    .fun-facts {
        background: rgba(255,255,255,0.1);
        border-radius: 20px;
        padding: 2rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        margin-bottom: 2rem;
    }
    
    .fun-facts h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    
    .fun-facts ul {
        list-style: none;
        padding: 0;
        text-align: left;
    }
    
    .fun-facts li {
        margin-bottom: 0.8rem;
        font-size: 1rem;
        opacity: 0.9;
    }
    
    .error-details {
        background: rgba(255,255,255,0.05);
        border-radius: 15px;
        padding: 1.5rem;
        border: 1px solid rgba(255,255,255,0.1);
    }
    
    .error-note {
        font-size: 0.9rem;
        opacity: 0.8;
        margin: 0;
    }
    
    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }
    
    .floating-helmet,
    .floating-carabiner,
    .floating-chalk,
    .floating-shoes {
        position: absolute;
        font-size: 3rem;
        animation: float 6s ease-in-out infinite;
    }
    
    .floating-helmet {
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }
    
    .floating-carabiner {
        top: 30%;
        right: 15%;
        animation-delay: 1.5s;
    }
    
    .floating-chalk {
        bottom: 30%;
        left: 20%;
        animation-delay: 3s;
    }
    
    .floating-shoes {
        bottom: 20%;
        right: 10%;
        animation-delay: 4.5s;
    }
    
    @@keyframes fall {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        25% {
            transform: translateY(10px) rotate(5deg);
        }
        50% {
            transform: translateY(20px) rotate(10deg);
        }
        75% {
            transform: translateY(10px) rotate(5deg);
        }
    }
    
    @@keyframes swing {
        0%, 100% {
            transform: rotate(0deg);
        }
        25% {
            transform: rotate(15deg);
        }
        75% {
            transform: rotate(-15deg);
        }
    }
    
    @@keyframes scatter {
        0%, 100% {
            transform: scale(1) rotate(0deg);
        }
        33% {
            transform: scale(1.1) rotate(10deg);
        }
        66% {
            transform: scale(0.9) rotate(-10deg);
        }
    }
    
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }
        33% {
            transform: translateY(-20px) rotate(5deg);
        }
        66% {
            transform: translateY(-10px) rotate(-5deg);
        }
    }
    
    @@media (max-width: 768px) {
        .error-icon {
            font-size: 4rem;
        }
        
        .error-title {
            font-size: 1.8rem;
        }
        
        .error-message {
            font-size: 1rem;
        }
        
        .floating-elements {
            display: none;
        }
        
        .btn {
            padding: 0.8rem 1.5rem;
            font-size: 0.9rem;
        }
    }
</style>
