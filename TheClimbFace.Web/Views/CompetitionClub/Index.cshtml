@using TheClimbFace.Web.ViewModels.Club
@model ClubsViewModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@(Model?.CompetitionName ?? "Competition") Clubs</h3>
                    <p class="mb-0 mt-1 text-white-50">
                        <i class="fas fa-building me-1"></i> Total: @(Model?.Clubs?.Count ?? 0)
                    </p>
                </div>
                <div>
                    </a>
                    <button class="btn btn-light" onclick="history.back()">
                        <i class="fas fa-arrow-left"></i> Back
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (Model?.Clubs == null || !Model.Clubs.Any())
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-building fa-4x text-muted mb-3"></i>
                        <h4>No Clubs Yet</h4>
                        <p class="text-muted mb-4">Start by adding the first club to the competition</p>
                        <a asp-action="AddClub" asp-route-competitionId="@Model?.CompetitionId" 
                           class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Club
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="clubs-list">
                    @foreach (var club in Model.Clubs)
                    {
                        <div class="club-card mb-3">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="club-icon">
                                        <i class="fas fa-building"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <h5 class="mb-0">@club.ClubName</h5>
                                    <small class="text-muted">
                                        <i class="fas fa-users me-1"></i>
                                        Total climbers: @club.ClibersCount
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .club-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 1rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .club-card:hover {
        transform: translateX(5px);
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .club-icon {
        width: 45px;
        height: 45px;
        background-color: #e9ecef;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
    }

    .empty-state {
        color: #6c757d;
    }

    .empty-state i {
        opacity: 0.5;
    }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
    }

    .btn-group .btn i {
        font-size: 0.875rem;
    }

    .card-header .text-white-50 {
        opacity: 0.8;
    }
</style>

