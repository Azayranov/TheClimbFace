@using TheClimbFace.Web.ViewModels.Arbitrator
@model ArbitratorCompetitionsViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">My Assigned Competitions</h2>
    </div>

    @if (!Model.Competitions.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="fas fa-gavel fa-2x mb-3"></i>
            <p class="mb-0">You are not assigned as an arbitrator to any competitions yet.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var competition in Model.Competitions)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow @(competition.IsActive ? "border-success" : "")">
                        <div class="card-header @(competition.IsActive ? "bg-success bg-opacity-10" : "bg-secondary bg-opacity-10")">
                            @if (competition.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                            <span class="ms-2 badge bg-primary">Boulder @competition.AssignedBoulderNumber</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-primary">@competition.Name</h5>
                            <div class="card-text">
                                <p class="mb-2">
                                    <i class="fas fa-user-tie text-muted"></i>
                                    <span class="ms-2">@competition.Organizer</span>
                                </p>
                                <p class="mb-3">
                                    <i class="far fa-calendar-alt text-muted"></i>
                                    <span class="ms-2">
                                        @competition.StartDate.ToString("dd.MM.yyyy") 
                                        <span class="text-muted">to</span> 
                                        @competition.EndDate.ToString("dd.MM.yyyy")
                                    </span>
                                </p>
                                @if (competition.IsActive)
                                {
                                    <p class="mb-0">
                                        <i class="fas fa-clipboard-list text-success"></i>
                                        <span class="ms-2 text-success">Ready for scoring</span>
                                    </p>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            @if (competition.IsActive)
                            {
                                <a asp-controller="Arbitrator" asp-action="Score" asp-route-id="@competition.Id" 
                                   class="btn btn-success w-100">
                                    <i class="fas fa-clipboard-check"></i> Score Boulder
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Arbitrator" asp-action="Results" asp-route-id="@competition.Id" 
                                   class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-chart-bar"></i> View Results
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .card {
        border-radius: 10px;
        border: none;
    }
    
    .btn {
        border-radius: 6px;
    }
    
    .alert {
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px !important;
        border-top-right-radius: 10px !important;
    }

    .badge {
        font-size: 0.85em;
    }
</style>

@section Scripts {
}
