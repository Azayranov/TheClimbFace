@using TheClimbFace.Web.ViewModels.Competition
@model DetailsViewModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@(Model?.Name ?? "Competition Details")</h3>
                    @if (Model?.IsActive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
                <button class="btn btn-light" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
        
        <div class="card-body">
            @if (Model == null)
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Competition data not available
                </div>
            }
            else
            {
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="info-group">
                            <label class="text-muted">Organizer</label>
                            <p class="h5">@(Model.Organizer ?? "Not specified")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-group">
                            <label class="text-muted">Dates</label>
                            <p class="h5">
                                @if (Model.StartDate != null && Model.EndDate != null)
                                {
                                    <span>@Model.StartDate.ToString("dd.MM.yyyy") - @Model.EndDate.ToString("dd.MM.yyyy")</span>
                                }
                                else
                                {
                                    <span>Dates not set</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-md-4">
                        <a asp-action="Index" asp-controller="CompetitionClimber" asp-route-id="@Model.Id" 
                           class="card action-card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                <h4 class="card-title">Climbers</h4>
                                <div class="counter-badge">
                                    @(Model.ClimbersCount)
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-4">
                        <a asp-action="Index" asp-controller="CompetitionClub" asp-route-id="@Model.Id"
                           class="card action-card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-building fa-3x text-primary mb-3"></i>
                                <h4 class="card-title">Clubs</h4>
                                <div class="counter-badge">
                                    @(Model.ClubsCount)
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-4">
                        <a asp-action="Index" asp-controller="CompetitionArbitrator" asp-route-idCompetition="@Model.Id"
                           class="card action-card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-gavel fa-3x text-primary mb-3"></i>
                                <h4 class="card-title">Arbitrators</h4>
                                <div class="counter-badge">
                                    @(Model.ArbitratorsCount)
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-4">
                        <a class="card action-card text-decoration-none h-100 disabled" tabindex="-1" aria-disabled="true"
                           style="pointer-events: none; opacity: 0.6;">
                            <div class="card-body text-center">
                                <i class="fas fa-mountain fa-3x text-primary mb-3"></i>
                                <h4 class="card-title">Boulders</h4>
                                <div class="counter-badge">
                                    @(Model.BoulderCount)
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-4">
                        @if (Model.IsActive)
                        {
                            <a href="#" class="card action-card text-decoration-none h-100 disabled" tabindex="-1" aria-disabled="true"
                               style="pointer-events: none; opacity: 0.6;">
                                <div class="card-body text-center">
                                    <i class="fas fa-edit fa-3x text-primary mb-3"></i>
                                    <h4 class="card-title">Edit Competition</h4>
                                    <p class="text-muted">Competition must be stopped first</p>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id"
                               class="card action-card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-edit fa-3x text-primary mb-3"></i>
                                    <h4 class="card-title">Edit Competition</h4>
                                    <p class="text-muted">Modify competition details</p>
                                </div>
                            </a>
                        }
                    </div>

                    <div class="col-md-4">
                        @if (Model.IsActive)
                        {
                            <a asp-action="Stop" asp-route-idCompetition="@Model.Id"
                               class="card action-card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-stop fa-3x text-danger mb-3"></i>
                                    <h4 class="card-title">Stop Competition</h4>
                                    <p class="text-muted">End the competition</p>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a asp-action="Start" asp-route-idCompetition="@Model.Id"
                               class="card action-card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-play fa-3x text-success mb-3"></i>
                                    <h4 class="card-title">Start Competition</h4>
                                    <p class="text-muted">Begin the competition</p>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<style>
    .info-group {
        margin-bottom: 1.5rem;
    }
    
    .info-group label {
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
        display: block;
    }
    
    .action-card {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    .counter-badge {
        background-color: #e9ecef;
        color: #495057;
        font-size: 1.25rem;
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        display: inline-block;
        margin-top: 0.5rem;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .btn-light {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }
    
    .btn-light:hover {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .badge {
        font-size: 0.875rem;
        padding: 0.5em 1em;
        margin-top: 0.5rem;
    }
</style>

@section Scripts {
}
