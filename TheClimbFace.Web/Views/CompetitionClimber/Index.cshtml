@using TheClimbFace.Web.ViewModels.Competition.Climber
@model CompetitionClimbersViewModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@(Model?.CompetitionName ?? "Competition") Climbers</h3>
                    <p class="mb-0 mt-1 text-white-50">
                        <i class="fas fa-users me-1"></i> Total: @(Model?.Climbers?.Count ?? 0)
                    </p>
                </div>
                <div class="btn-group">
                    @if (!Model.IsActive && Model?.Climbers?.Any() == true)
                    {
                        <a asp-action="SetStartingNumbers" asp-route-competitionId="@Model?.CompetitionId"
                           class="btn btn-success me-2">
                            <i class="fas fa-hashtag"></i> Set Start Numbers
                        </a>
                    }
                    @if (Model?.IsActive == true)
                    {
                        <a href="#" data-bs-toggle="modal" data-bs-target="#activeCompetitionModal"
                           class="btn btn-light me-2">
                            <i class="fas fa-plus"></i> Add Climber
                        </a>
                    }
                    else
                    {
                        <a asp-action="Add" asp-route-competitionId="@Model?.CompetitionId"
                           class="btn btn-light me-2">
                            <i class="fas fa-plus"></i> Add Climber
                        </a>
                    }
                    <a class="btn btn-light" asp-controller="Competition" asp-action="Details" asp-route-id="@Model?.CompetitionId">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Filters Section -->
            <form method="post" asp-action="Index" class="mb-4">
                <input type="hidden" name="CompetitionId" value="@Model?.CompetitionId" />
                <div class="row">
                    <div class="col-md-4">
                        <label for="groupFilter" class="form-label">
                            <i class="fas fa-layer-group me-1"></i> Filter by Group
                        </label>
                        <select id="groupFilter" name="groupFilter" class="form-select">
                            <option value="">All Groups</option>
                            <option value="1" selected="@(Model?.GroupFilter == 1)">Group 1</option>
                            <option value="2" selected="@(Model?.GroupFilter == 2)">Group 2</option>
                            <option value="3" selected="@(Model?.GroupFilter == 3)">Group 3</option>
                            <option value="4" selected="@(Model?.GroupFilter == 4)">Group 4</option>
                            <option value="5" selected="@(Model?.GroupFilter == 5)">Group 5</option>
                            <option value="6" selected="@(Model?.GroupFilter == 6)">Group 6</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="genderFilter" class="form-label">
                            <i class="fas fa-venus-mars me-1"></i> Filter by Gender
                        </label>
                        <select id="genderFilter" name="genderFilter" class="form-select">
                            <option value="">All Genders</option>
                            <option value="male" selected="@(Model?.GenderFilter == "male")">Male</option>
                            <option value="female" selected="@(Model?.GenderFilter == "female")">Female</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 me-2">
                            <i class="fas fa-filter me-1"></i> Apply Filters
                        </button>
                        <a href="@Url.Action("Index", new { idCompetition = Model?.CompetitionId })" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Clear
                        </a>
                    </div>
                </div>
            </form>

            @if (Model?.Climbers == null || !Model.Climbers.Any())
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-user-plus fa-4x text-muted mb-3"></i>
                        <h4>No Climbers Yet</h4>
                        <p class="text-muted mb-4">Start by adding your first climber to the competition</p>
                        @if (Model?.IsActive == true)
                        {
                            <a href="#" data-bs-toggle="modal" data-bs-target="#activeCompetitionModal" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Climber
                            </a>
                        }
                        else
                        {
                            <a asp-action="Add" asp-route-competitionId="@Model?.CompetitionId" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Climber
                            </a>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="climbers-list">
                    @foreach (var climber in Model.Climbers)
                    {
                        <div class="climber-card mb-3 @(climber.Gender?.ToLower() == "male" ? "male-climber" : climber.Gender?.ToLower() == "female" ? "female-climber" : "")" 
                             data-gender="@(climber.Gender?.ToLower() ?? "none")" data-group="@(climber.GroupNumber)">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="number-container">
                                        <small class="number-label">Start Number</small>
                                        <div class="start-number @(climber.StartNumber == 0 ? "not-set" : "")">
                                            @if (climber.StartNumber == 0)
                                            {
                                                <span class="not-set-text">Not Set</span>
                                            }
                                            else
                                            {
                                                <span class="number">#@climber.StartNumber</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <h5 class="mb-1">@climber.FirstName @climber.LastName</h5>
                                    <div class="climber-details">
                                        <span class="badge bg-primary me-2">
                                            <i class="fas fa-building me-1"></i> Club: @(climber.ClubName ?? "No Club")
                                        </span>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-layer-group me-1"></i> Group: @(climber.GroupNumber)
                                        </span>
                                        <span class="badge @(climber.Gender?.ToLower() == "male" ? "bg-info" : climber.Gender?.ToLower() == "female" ? "bg-danger" : "bg-secondary")">
                                            <i class="fas @(climber.Gender?.ToLower() == "male" ? "fa-mars" : climber.Gender?.ToLower() == "female" ? "fa-venus" : "fa-question") me-1"></i> 
                                            @(climber.Gender ?? "Unknown")
                                        </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="btn-group">
                                        <a asp-action="Delete" asp-route-idClimber="@climber.Id"
                                            asp-route-idCompetition="@Model?.CompetitionId"
                                            class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to remove this climber?')">
                                            <i class="fas fa-user-minus"></i> Remove
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal for Active Competition -->
<div class="modal fade" id="activeCompetitionModal" tabindex="-1" aria-labelledby="activeCompetitionModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="activeCompetitionModalLabel">Active Competition</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This competition is currently active. You need to stop it before making any changes.
                </div>
                <p>Would you like to stop the competition now?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a asp-action="Stop" asp-controller="Competition" asp-route-idCompetition="@Model?.CompetitionId" class="btn btn-danger">
                    <i class="fas fa-stop"></i> Stop Competition
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .climber-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 1rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .climber-card:hover {
        transform: translateX(5px);
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    /* Gender-based color coding */
    .male-climber {
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.1) 0%, rgba(13, 110, 253, 0.05) 100%);
        border-left: 4px solid rgba(13, 110, 253, 0.6);
    }

    .male-climber:hover {
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.15) 0%, rgba(13, 110, 253, 0.08) 100%);
        border-left-color: rgba(13, 110, 253, 0.8);
    }

    .female-climber {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%);
        border-left: 4px solid rgba(220, 53, 69, 0.6);
    }

    .female-climber:hover {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15) 0%, rgba(220, 53, 69, 0.08) 100%);
        border-left-color: rgba(220, 53, 69, 0.8);
    }

    .number-container {
        text-align: center;
    }

    .number-label {
        display: block;
        color: #6c757d;
        font-size: 0.7rem;
        margin-bottom: 0.2rem;
    }

    .start-number {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        background-color: #4CAF50;
        color: white;
        font-size: 1.1rem;
    }

    .start-number.not-set {
        background-color: #e9ecef;
        color: #6c757d;
    }

    .start-number .not-set-text {
        font-size: 0.7rem;
        text-align: center;
    }

    .start-number .number {
        font-size: 1.2rem;
    }

    .climber-details {
        font-size: 0.9rem;
    }

    .badge {
        padding: 0.5em 0.8em;
    }

    .empty-state {
        color: #6c757d;
    }

    .empty-state i {
        opacity: 0.5;
    }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
    }

    .btn-group .btn i {
        font-size: 0.875rem;
    }

    .card-header .text-white-50 {
        opacity: 0.8;
    }

    .table-responsive {
        margin: 0 -1rem;
    }

    .table {
        margin-bottom: 0;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .table td {
        vertical-align: middle;
    }

    .form-control-sm {
        width: 100px;
    }

    /* Filter styles */
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-select {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: border-color 0.3s ease;
    }

    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    #clearFilters {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    #clearFilters:hover {
        background-color: #6c757d;
        color: white;
        transform: translateY(-1px);
    }

    /* Filter section styling */
    .row.mb-4 {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid #e9ecef;
    }

    /* Animation for filter changes */
    .climber-card {
        transition: all 0.3s ease;
    }

    /* No results message styling */
    #noResultsMessage .empty-state {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid #e9ecef;
    }
</style>
@section Scripts {
}

